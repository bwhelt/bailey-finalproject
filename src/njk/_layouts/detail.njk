{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      <img class="img-fluid" src= "img/members/{{ members.image }}">
    </div>
    <div class="col-sm-8">
      <h1 style="text-align:center;">{{ members.name }}</h1>
        <h2 style="text-align:center;">{{ members.tenure}}</h2>
          <h5 style="text-align:center;">{{ members.instruments }}</h5>
            <p>{{ members.text | safe}}</p>
    </div>
  </div>
</article>

{% endblock %}